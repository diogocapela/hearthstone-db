<div class="container">

{{> pub_header}}

	<div class="page-header">
		<h1><b>Search:</b> {{searchName}}</h1>
	</div>

	<table id="table-list" class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Set</th>
				<th>Type</th>
				<th>Rarity</th>
				<th>Class</th>
				<th>Cost</th>
				<th>Attack</th>
				<th>Health</th>
			</tr>
		</thead>
		<tbody>

			{{#each search}}
			{{> _index}}
			{{/each}}

		</tbody>
	</table>

{{> pub_footer}}

</div> <!-- End of .container -->
{{> footer}}